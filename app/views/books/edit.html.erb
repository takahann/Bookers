<h1>Editing Book</h1>

<%= form_for(@book, url:"/books/#{@book.id}") do |b| %>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <p>error!</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <h4>Title</h4>
  <%= b.text_field :title %>
  <h4>Body</h4>
  <%= b.text_area :body %>
  <p><%= b.submit 'Update Book' %></p>


  <%= link_to "Show", book_path(@book) %>
  |
  <%= link_to "Back", books_path %>

<% end %>