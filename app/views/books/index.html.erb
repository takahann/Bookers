
<main>
<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show", book_path(book.id) %>
        <%= link_to "Edit", edit_book_path(book.id) %>
        <%= link_to 'Destroy', book_path(book.id), method: :delete, 'data-confirm' => 'Are you sure?' %>
      </td>
    </tr>
  <% end %>
</table>



<h1>New book</h1>
<%= form_for(@book) do |b| %>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <p>error!</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <h4>Title</h4>
    <%= b.text_field :title %>
    <h4>Body</h4>
    <%= b.text_area :body %>
    <p>
    <%= b.submit 'Create Book' %>
    </p>
<% end %>
</main>